" Indexer
set tags=./tags;
set completeopt=longest,menuone

" easytags
let g:easytags_async = 1
let g:easytags_syntax_keyword = 'always'
let g:easytags_file = './tags'
let g:easytags_on_cursorhold = 0
let g:easytags_resolve_links = 1

if has("cscope")
" look both cscope and ctags
  set cscopetag
" search cscope before ctags
  set csto=0
" if database exists, load it
  set nocscopeverbose
  if filereadable('cscope.out')
    cs add cscope.out
  endif
" make cscope be verbose
  set cscopeverbose
else
  echo "cscope is not present!"
endif


" find symbol definition
noremap <Leader><CR> <C-]>
" jump back from definition
noremap <Leader><Down> <C-T>
" find symbol references
noremap <Leader>\ :wa<CR>:cs find s <C-R>=expand("<cword>")<CR><CR>

