term xterm-256color
defscrollback 4096
defshell -bash
backtick 0 0 0 whoami
hardstatus alwayslastline '%{= g}[ %0`@%H %{g}][ %{= k}%?%-Lw%?%{= R}%n*%f %t%?%{= R}(%u)%?%{= k}%+Lw%?%= %{= g} ][ %{y}Load: %l %{g}]'
startup_message off
altscreen on
vbell off
attrcolor b ".I"
defbce "on"

bindkey [1;5A next
bindkey [1;5B prev
